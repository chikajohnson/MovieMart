<strong>All movies : {{products.length}}</strong>
<div class="row">    
    {{#each products}}
        <div class="card col-sm-3" style="margin:20px 5px 0;display: inline-block">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
            </div>
            <img style="height: 150px;display:block; width:100%" src="{{this.imagePath}}" alt="Card image">
            <div class="card-body">
                <p class="card-text">{{this.description}}</p>
            </div>
            <div class="card-body">
                <strong class="">&#8358; {{this.price}}</strong>
                <a href="#" class="card-link btn btn-success float-right">Add to Cart</a>
            </div>
        </div>
    {{/each}}
</div>
